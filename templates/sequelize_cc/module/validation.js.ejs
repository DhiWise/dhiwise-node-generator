const joi = require('joi');
exports.createSchema = joi.object({
    <%_ for(let i in SCHEMA){ _%>
        <%_ let jsonStr = JSON.stringify(SCHEMA[i]);
        var finalStr = new String();
        finalStr = jsonStr.toString().replace(/"/g, "");
    _%>
    <%-i%>:<%-finalStr%>,
    <%_}_%>
}).unknown(true);
